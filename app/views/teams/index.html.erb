<h1>Teams</h1>

<% if @teams.any? %>
  <ul>
    <% @teams.each do |team| %>
      <li><%= link_to team.name, team_path(team) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no teams yet.</p>
<% end %>


<p><%= link_to "Create new teams", new_team_path %></p>
<p><%= link_to "Add a new game", new_team_game_path %></p>