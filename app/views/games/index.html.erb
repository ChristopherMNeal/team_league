<h1>Games</h1>
<% if @games.any? %>
  <ul>
    <% @games.each do |game| %>
      <li><%= link_to Team.find(game.team_1_id).name + " vs. " + Team.find(game.team_2_id).name, game_path(game) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no games yet.</p>
<% end %>


<p><%= link_to "Add a new game", new_game_path %></p>
<p><%= link_to "Return to teams", teams_path %></p>